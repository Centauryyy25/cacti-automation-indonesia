# CactiAutomation Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ==========================================================================
# Environment
# ==========================================================================
ENV=development
DEBUG=false

# ==========================================================================
# CACTI Configuration
# ==========================================================================
CACTI_BASE_URL=https://nms.cbn.id/
# Comma-separated list of allowed CACTI URLs (SSRF protection)
CACTI_ALLOWED_URLS=https://nms.cbn.id/

# ==========================================================================
# Credentials (REQUIRED - set these!)
# ==========================================================================
CACTI_USERNAME=fsr-bsi
CACTI_PASSWORD=fsr-bsi

# ==========================================================================
# Web Server
# ==========================================================================
HOST=127.0.0.1
PORT=5000
# Comma-separated allowed CORS origins
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ==========================================================================
# Selenium / Scraping
# ==========================================================================
SELENIUM_HEADLESS=false
SELENIUM_WAIT_TIMEOUT=15
SELENIUM_PAGE_LOAD_TIMEOUT=30

# ==========================================================================
# Request / Retry Configuration
# ==========================================================================
REQUEST_TIMEOUT=30
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0

# ==========================================================================
# OCR Configuration
# ==========================================================================
OCR_GPU_ENABLED=false
OCR_TARGET_WIDTH=1600
OCR_BATCH_SIZE=4
OCR_LANGUAGES=en

# ==========================================================================
# Storage
# ==========================================================================
OUTPUT_DIR=output
LOG_DIR=Debug
