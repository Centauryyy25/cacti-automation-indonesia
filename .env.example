# CactiAutomation Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ==========================================================================
# Environment
# ==========================================================================
ENV=development
DEBUG=false

# ==========================================================================
# CACTI Configuration
# ==========================================================================
CACTI_BASE_URL=https://your-cacti-server.example.com/
# Comma-separated list of allowed CACTI URLs (SSRF protection)
CACTI_ALLOWED_URLS=https://your-cacti-server.example.com/

# ==========================================================================
# Credentials (REQUIRED - set these!)
# ==========================================================================
CACTI_USERNAME=your_username_here
CACTI_PASSWORD=your_password_here

# ==========================================================================
# Web Server
# ==========================================================================
HOST=127.0.0.1
PORT=5000
# Comma-separated allowed CORS origins
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ==========================================================================
# Selenium / Scraping
# ==========================================================================
SELENIUM_HEADLESS=false
SELENIUM_WAIT_TIMEOUT=15
SELENIUM_PAGE_LOAD_TIMEOUT=30

# ==========================================================================
# Request / Retry Configuration
# ==========================================================================
REQUEST_TIMEOUT=30
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0

# ==========================================================================
# OCR Configuration
# ==========================================================================
OCR_GPU_ENABLED=false
OCR_TARGET_WIDTH=1600
OCR_BATCH_SIZE=4
OCR_LANGUAGES=en

# ==========================================================================
# Storage
# ==========================================================================
OUTPUT_DIR=output
LOG_DIR=Debug

# ==========================================================================
# Redis (for task queue - future use)
# ==========================================================================
REDIS_URL=redis://localhost:6379/0

# ==========================================================================
# Notifications
# ==========================================================================
NOTIFICATION_ENABLED=false

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_TO=admin@example.com

# Slack
SLACK_WEBHOOK_URL=
